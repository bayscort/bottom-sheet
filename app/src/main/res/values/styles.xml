<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Base style -->
    <style name="TextRegular">
        <item name="fontFamily">@font/inter_regular_400</item>
    </style>

    <style name="TextMedium">
        <item name="fontFamily">@font/inter_medium_500</item>
    </style>

    <style name="TextSemiBold">
        <item name="fontFamily">@font/inter_semibold_600</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/inter_bold_700</item>
    </style>

    <!-- Text D1 Style -->
    <style name="TextRegular.Display1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextMedium.Display1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextSemiBold.Display1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextBold.Display1">
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Text D2 Style -->
    <style name="TextRegular.Display2">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="TextMedium.Display2">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="TextSemiBold.Display2">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <style name="TextBold.Display2">
        <item name="android:textSize">@dimen/text_size_24sp</item>
    </style>

    <!-- Text H1 Style -->
    <style name="TextRegular.Heading1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextMedium.Heading1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSemiBold.Heading1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.Heading1">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Text H2 Style -->
    <style name="TextRegular.Heading2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextMedium.Heading2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextSemiBold.Heading2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="TextBold.Heading2">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <!-- Text B1 Style -->
    <style name="TextRegular.Body1">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextMedium.Body1">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextBold.Body1">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="TextSemiBold.Body1">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <!-- Text B2 Style -->
    <style name="TextRegular.Body2">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextMedium.Body2">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextSemiBold.Body2">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="TextBold.Body2">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!-- Text B3 Style -->
    <style name="TextRegular.Body3">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="TextMedium.Body3">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="TextSemiBold.Body3">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <style name="TextBold.Body3">
        <item name="android:textSize">@dimen/text_size_10sp</item>
    </style>

    <!-- Text View -->
    <style name="TextInputLayoutFilled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/colorBlack20</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/colorBlack50</item>
    </style>

    <!-- Button -->
    <style name="ButtonContained" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorFFF</item>
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
        <item name="android:background">@drawable/bg_button_contained</item>
        <item name="background">@drawable/bg_button_contained</item>
    </style>
    <style name="ButtonContainedRound" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorFFF</item>
        <item name="android:paddingTop">@dimen/dimen_4dp</item>
        <item name="android:paddingRight">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_4dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/bg_button_contained_rounded</item>
        <item name="background">@drawable/bg_button_contained_rounded</item>
    </style>
    <style name="ButtonOutlined" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/colorBlack40</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="background">@drawable/bg_button_outlined</item>
    </style>
    <style name="ButtonShow">
        <item name="android:background">@drawable/button_show_item</item>
        <item name="background">@drawable/button_show_item</item>
    </style>
    <style name="ButtonPositive" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorFFF</item>\
        <item name="android:background">@drawable/bg_button_positive</item>
    </style>
    <style name="ButtonPositive.Regular">
        <item name="android:paddingTop">@dimen/dimen_12dp</item>
        <item name="android:paddingBottom">@dimen/dimen_12dp</item>
    </style>
    <style name="ButtonPositive.Small">
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
    </style>


    <!-- bottom sheet -->
    <style name="AppTheme.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
    
    <!-- background text -->
    <style name="BackgroundTextStyle">
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:background">@drawable/bg_text_category</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>